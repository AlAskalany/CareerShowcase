<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:textColorSecondary">@color/secondaryTextColor</item>-->
    </style>

    <!-- Profile picture -->
    <style name="AppTheme.ProfilePicture" parent="android:Widget.ImageWell">
        <item name="android:layout_width">@dimen/layout_width_profile_picture</item>
        <item name="android:layout_height">@dimen/layout_height_profile_picture</item>
        <item name="android:layout_marginStart">@dimen/layout_marginStart_profile_picture</item>
        <item name="android:layout_marginTop">@dimen/layout_marginTop_profile_picture</item>
        <item name="android:layout_marginEnd">@dimen/layout_marginBottom_profile_picture</item>
        <item name="android:background">@android:drawable/picture_frame</item>
        <item name="android:elevation">@dimen/elevation_profile_picture</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="AppTheme.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
    </style>

    <!-- Overview card view -->
    <style name="AppTheme.CardViewOverview" parent="AppTheme.CardView">
        <item name="android:layout_width">@dimen/layout_width_cardView_overview</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/layout_marginStart_cardView_overview</item>
        <item name="android:layout_marginTop">@dimen/layout_marginTop_cardView_overview</item>
        <item name="android:layout_marginEnd">@dimen/layout_marginEnd_cardView_overview</item>
    </style>

    <!-- Overview name -->
    <style name="AppTheme.Name" parent="android:Widget.Material.TextView">
        <item name="android:layout_width">@dimen/layout_width_textView_name</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/layout_marginStart_textView_name</item>
        <item name="android:layout_marginTop">@dimen/layout_marginTop_textView_name</item>
        <item name="android:layout_marginEnd">@dimen/layout_marginEnd_textView_name</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display1</item>
        <item name="android:textSize">26sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- Overview headline -->
    <style name="AppTheme.Headline" parent="android:Widget.Material.TextView">
        <item name="android:layout_width">@dimen/layout_width_textView_headline</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/layout_marginBottom_textView_headline</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
        <item name="android:textSize">20sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- Container constraint layout -->
    <style name="AppTheme.ConstraintLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Bottom navigation -->
    <style name="AppTheme.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:layout_width">@dimen/layout_width_bottom_navigation</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/bottomNavigation</item>
        <item name="itemIconTint">@drawable/bottom_navigation_colors</item>
        <item name="itemTextColor">@drawable/bottom_navigation_colors</item>
    </style>

    <!-- Navigation container -->
    <style name="AppTheme.NavigationContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <!-- Fragment container -->
    <style name="AppTheme.FragmentContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Recycler view -->
    <style name="AppTheme.RecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Item card view -->
    <style name="AppTheme.ItemCardView" parent="AppTheme.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/material_card_spacing</item>
        <item name="android:layout_marginTop">@dimen/material_card_spacing</item>
        <item name="android:layout_marginRight">@dimen/material_card_spacing</item>
        <item name="android:minHeight">200dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="AppTheme.ItemCardView.EducationCardView" parent="AppTheme.ItemCardView"></style>

    <!-- Item title text view -->
    <style name="AppTheme.ItemTitleTextView" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">top</item>
    </style>

    <!-- Item description text view -->
    <style name="AppTheme.ItemDescriptionTextView" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="AppTheme.ItemTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>
</resources>
