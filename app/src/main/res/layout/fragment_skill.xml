<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="skill"
            type="com.alaskalany.careershowcase.model.Skill" />

        <variable
            name="callback"
            type="com.alaskalany.careershowcase.ui.skills.SkillOnClickCallback" />
    </data>

    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:id="@+id/cardView_Skill"
        style="@style/AppTheme.ItemCardView"
        android:onClick="@{() -> callback.onClick(skill)}">

        <TextView
            android:id="@+id/textView_skill_title"
            style="@style/AppTheme.ItemTitleTextView"
            tools:text="@{skill.title}" />

        <TextView
            android:id="@+id/textView_skill_description"
            style="@style/AppTheme.ItemDescriptionTextView"
            tools:text="@{skill.description}" />
    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>
</layout>
