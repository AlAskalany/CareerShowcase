<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="work"
            type="com.alaskalany.careershowcase.data.work.Work" />

        <variable
            name="callback"
            type="com.alaskalany.careershowcase.ui.work.WorkOnClickCallback" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView_Work"
        style="@style/AppTheme.ItemCardView"
        android:onClick="@{() -> callback.onClick(work)}">

        <TextView
            android:id="@+id/textView_work_title"
            style="@style/AppTheme.ItemTitleTextView"
            tools:text="@{work.title}" />

        <TextView
            android:id="@+id/textView_education_description"
            style="@style/AppTheme.ItemDescriptionTextView"
            tools:text="@{work.description}" />
    </com.google.android.material.card.MaterialCardView>
</layout>
