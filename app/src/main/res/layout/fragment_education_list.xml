<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="educationListViewModel"
            type="com.alaskalany.careershowcase.viewmodel.EducationListViewModel" />
    </data>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listEducation"
        style="@style/AppTheme.RecyclerView"
        android:clipToPadding="false"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingRight="8dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:context=".ui.educationEntity.EducationListFragment"
        tools:listitem="@layout/fragment_education" />
</layout>